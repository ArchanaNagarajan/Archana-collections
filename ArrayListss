import java.util.ArrayList;
import java.util.Collections;
import java.util.Iterator;
import java.util.Scanner;

public class ArrayListsValue {

	public static void main(String[] args) {
		
		 int average=0;
		 int sum=0;	
		
			System.out.println("No of students : 10");
			int n=10;
			ArrayList<Integer> marks = new ArrayList<Integer>();
			System.out.println("enter the marks");
			Scanner values = new Scanner(System.in);
		
			for(int i=0;i<n;i++) {
				int j=values.nextInt();
				marks.add(j);	
			}
			
			System.out.println("marks of the students are "+marks);
		
			for(int k : marks) {
			      sum+=k;
				}
				System.out.println("the total marks is "+ sum);
				average=sum/n;
				System.out.println("average is "+average);
				for(int i: marks) {
					
			    if(i>=75) {
							
				  System.out.println(i +" 1st class");
				}
			ArrayList<String> names = new ArrayList<String>(5);
			System.out.println("enter the names");
			Scanner names_students = new Scanner(System.in);
			for(int m=0;m<5;m++) {
				String value =names_students.next();
				names.add(value);	
			}
			System.out.println(names);
			Collections.sort(names);
			System.out.println(names);
			
			int num=5;
			ArrayList<Integer> students_marks = new ArrayList<Integer>();
			System.out.println("enter the marks");
			Scanner numbers = new Scanner(System.in);
		
			for(int l=0;l<num;l++) {
				int j=numbers.nextInt();
				students_marks.add(j);	
			}
			
			System.out.println("marks of the students are "+students_marks);
			Collections.sort(students_marks);
			System.out.println("ascending order: "+students_marks);
			Collections.reverse(students_marks);
			System.out.println("descending order: "+students_marks);
			
		}
		
	}
	
}

	
